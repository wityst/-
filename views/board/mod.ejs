<!DOCTYPE html>
<html lang="ko">
<% include ../layout/head %>
<script src="/ckeditor/ckeditor.js"></script>
<script src="/ckeditor/translations/ko.js"></script>
<script>
window.addEventListener("load", ()=>{
    ClassicEditor
        .create(document.querySelector("#editor"))
        .then( editor => {
            console.log(editor);
        });
});
</script>
<style>
    .ck-editor__editable {
        min-height: 400px;
    }
</style>
<body>
    <% include ../layout/nav %>

    <div class="container">
        <h1>글수정</h1>
        <div class="row mt-4">
            <div class="col-10 offset-1">
                <form action="/board/mod/<%=data.id%>" method="post">
                    <div class="form-group">
                        <label>제목</label>
                        <input type="text" class="form-control" name="title"
                             placeholder="글 제목을 입력하세요" required value="<%=data.title%>">
                    </div>

                    <div class="form-group">
                        <label>글 내용</label>
                        <textarea id="editor" type="text" class="form-control" name="content"
                            placeholder="글 내용을 입력하세요" rows="5"><%-data.content%></textarea>
                    </div>

                    <button class="btn btn-primary" type="submit">글수정</button>
                </form>
            </div>
        </div>
    </div>
</body>

</html>